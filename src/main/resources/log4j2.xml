<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="layout"> %d{DEFAULT} [%t] %-5level %logger - %m%n</Property>
        <Property name="outputFolderXML">${env:outputFolder}</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="${layout}"/>
        </Console>
        <File name="logFile" filePattern="%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d [%p] %c{1} %t - %m%n" />
        </File>
    </Appenders>
    <Loggers>
        <Logger name="mainLog" level="info" additivity="false">
            <AppenderRef ref="console" />

        </Logger>
        <Root level="info" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="logFile" />
        </Root>
    </Loggers>
</Configuration>